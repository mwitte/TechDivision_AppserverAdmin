<div class="row">
    <div class="col-xs-6">
        <h1>{{view.headline}}</h1>
    </div>
    <div class="col-xs-6">
        <div class="btn-group pull-right" style="margin-top:25px">
            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> New</button>
        </div>
    </div>
</div>

<br>

<table class="table table-hover">
    <tbody>
    {{#each}}
        <tr>
            <td width="1%">{{model.id}}</td>
            <td>
                {{#if isEditing}}
                    {{input class="edit" value=name focus-out="acceptChanges" insert-newline="acceptChanges"}}
                {{else}}
                    {{widgetTitle}}
                {{/if}}
            </td>
            <td>{{widgetDescription}}</td>
            <td>
                <div class="pull-right">
                    <button {{action "edit"}} type="button" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-edit"></span>
                    </button>
                    <button {{action "remove"}} type="button"
                                                                    class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                </div>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>



