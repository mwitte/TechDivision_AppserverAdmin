<div class="row">
    <div class="col-xs-6">
        <h1>Show Containers</h1>
    </div>
    <div class="col-xs-6">
        <!--
        <div class="btn-group pull-right" style="margin-top:25px">
            <span class="glyphicon glyphicon-plus"></span>
            {{input type="text" id="new-vhost" placeholder="YourContainer" value=newName action="create"}}
        </div>
        -->
    </div>
</div>

<br>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Socket</th>
            <th>Workers</th>
            <th>Id</th>
        </tr>
    </thead>
    <tbody>
    {{#each}}
        <tr>
            <td>
                {{#if isEditing}}
                    {{input class="edit" value=name focus-out="acceptChanges" insert-newline="acceptChanges"}}
                {{else}}
                    {{name}}
                {{/if}}
            </td>
            <td>
                {{address}}:{{port}}
            </td>
            <td>
                {{workerNumber}}
            </td>
            <td width="1%" nowrap="nowrap"><small>{{id}}</small></td>
        </tr>
    {{/each}}
    </tbody>
</table>